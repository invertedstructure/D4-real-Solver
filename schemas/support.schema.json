{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SupportIndices",
  "type": "object",
  "description": "Allowed row/col indices per degree.",
  "patternProperties": {
    "^[0-9]+$": {
      "type": "object",
      "properties": {
        "rows": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 0
          }
        },
        "cols": {
          "type": "array",
          "items": {
            "type": "integer",
            "minimum": 0
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}