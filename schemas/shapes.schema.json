{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OTCShapeManifest",
  "type": "object",
  "required": [
    "degrees"
  ],
  "properties": {
    "degrees": {
      "type": "object",
      "description": "For each degree k: dims of C_k and C_{k-1}.",
      "patternProperties": {
        "^[0-9]+$": {
          "type": "object",
          "required": [
            "dim_k",
            "dim_k_minus_1"
          ],
          "properties": {
            "dim_k": {
              "type": "integer",
              "minimum": 0
            },
            "dim_k_minus_1": {
              "type": "integer",
              "minimum": 0
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}